<UserControl x:Class="GameOfLife2.CellControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameOfLife2"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="30" d:Background="White">
    <Grid Margin="1">
        <Rectangle Stroke="#114"></Rectangle>
        <Button Name="ControlButton" 
                Click="ControlButton_OnClick"
                Background="{Binding ButtonFill}" 
                BorderBrush="Transparent"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Margin="0"
                BorderThickness="0"/>
    </Grid>
</UserControl>
